<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

<changeSet id="1" author="liquibase">
    <createTable tableName="medical_staff">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true"/>
        </column>
        <column name="version" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="access_level" type="BIGINT">
            <constraints nullable="false" foreignKeyName="fk_medical_staff_access_level" references="access_level(id)"/>
        </column>
        <column name="license_nr" type="varchar(8)">
            <constraints nullable="false" unique="true"/>
        </column>
        <column name="specialization" type="varchar(255)"/>
        <column name="academic_degree" type="varchar(255)">
            <constraints nullable="false"/>
        </column>
        <column name="position" type="varchar(255)">
            <constraints nullable="false"/>
        </column>
        <column name="creation_date" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
            <constraints nullable="false"/>
        </column>
        <column name="created_by" type="BIGINT">
            <constraints foreignKeyName="fk_medical_staff_created_by" references="account(id)"/>
        </column>
        <column name="modification_date" type="date"/>
        <column name="modified_by" type="BIGINT">
            <constraints foreignKeyName="fk_medical_staff_modified_by" references="account(id)"/>
        </column>
    </createTable>
</changeSet>
</databaseChangeLog>
